# ===========================================
# Upbit Coin Contest - 환경 변수 설정
# ===========================================
# 이 파일을 .env로 복사한 후 실제 값으로 수정하세요
# cp .env.example .env

# -------------------------------------------
# PostgreSQL 데이터베이스
# -------------------------------------------
POSTGRES_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/trading

# -------------------------------------------
# ClickHouse (시세 데이터 저장용)
# -------------------------------------------
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your_clickhouse_password
CLICKHOUSE_DATABASE=default

# -------------------------------------------
# Redis (캐싱용, 선택사항)
# -------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# 캐시 TTL (초)
CACHE_TTL_CANDLES=5
CACHE_TTL_TICKERS=1
CACHE_TTL_LEADERBOARD=10

# -------------------------------------------
# Clerk 인증 (https://clerk.com)
# -------------------------------------------
# Clerk 대시보드에서 발급받은 키 입력
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key

# -------------------------------------------
# 트레이딩 설정
# -------------------------------------------
# 거래 수수료율 (0.0005 = 0.05%)
FEE_RATE=0.0005

# 대회 참가 시 초기 지급 금액 (KRW)
INITIAL_BALANCE=1000000

# -------------------------------------------
# 관리자 설정
# -------------------------------------------
# 관리자 이메일 (쉼표로 구분하여 여러 명 지정 가능)
ADMIN_EMAILS=admin@example.com
